---
import '@app/styles/index.css';
import 'tippy.js/animations/scale.css';
import 'tippy.js/dist/tippy.css';

import { ViewTransitions } from 'astro:transitions';
import type { ComponentProps, HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'body'> & {
  withViewTransitions?: boolean;
  withNoScriptFallback?: boolean;
};

const isDev = import.meta.env.DEV;
const {
  withViewTransitions = false,
  withNoScriptFallback = false,
  class: clazz,
  ...props
} = Astro.props;
---

<html
  lang="es"
  class="dark"
>
  <head>
    <!-- End Google Tag Manager -->
    <link
      rel="sitemap"
      href="/sitemap-index.xml"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />
    <link
      rel="manifest"
      href="/site.webmanifest"
    />
    <link
      rel="mask-icon"
      href="/safari-pinned-tab.svg"
      color="#3fa5ff"
    />
    <meta
      name="msapplication-TileColor"
      content="#ffffff"
    />
    <meta
      name="theme-color"
      content="#ffffff"
    />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />

    <script
      is:inline
      data-astro-rerun
      src="/polyfills.js"
    ></script>

    {withViewTransitions && <ViewTransitions fallback="swap" />}

    <slot name="head" />
  </head>

  <body>
    <slot />

    {
      // Adds a debug screens little badge to debug the current TailwindCSS screen.
      isDev && (
        <div class="debug-screens pointer-events-none absolute inset-0 size-full" />
      )
    }

    {withNoScriptFallback}
  </body>
</html>
