                      <div class="flex gap-1">
                        {github && (
                          <a
                            href={github}
                            rel="nonreferrer"
                            target="_blank"
                          >
                            <GitHub />
                          </a>
                        )}
                        {figma && (
                          <a
                            href={figma}
                            rel="nonreferrer"
                            target="_blank"
                          >
                            <Figma />
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                  <div
                    class="z-10 line-clamp-3 max-w-full text-pretty text-base dark:text-neutral-200 text-muted-foreground"
                  >
                    <p>{description}</p>
                  </div>
                </div>
                <!-- card footer tags -->
                  <ul class="flex flex-wrap mt-auto gap-1 text-pretty px-2 pt-3 text-sm text-muted mb-2 gap-x-2">
                        {tags.map((tag) => (
                          <li>
                            <span
                              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                            >
                              <tag.icon class="size-4" />
                              {tag.name}
                            </span>
                          </li>
                        ))}
                  </ul>
                <!-- a full card -->
                <a href={link} class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-slate-900/5 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 dark:bg-zinc-700/50 sm:-inset-x-6 sm:rounded-2xl"></a>
