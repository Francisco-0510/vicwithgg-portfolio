    <ul class="grid gap-8 md:grid-cols-2 md:gap-6">
      {
        PROJECTS.map(
          ({ title, image, description, tags, link, github, figma }) => (
             <li>
              <div
                id="project-card"
                class="group relative flex h-full flex-col overflow-hidden rounded-lg border border-neutral-200 dark:border-neutral-700 bg-card pb-4 text-card-foreground transition-all duration-300 ease-out hover:shadow-lg gap-y-3 "
              >
                <!-- card header img -->
                { <div class="z-10 block cursor-pointer">
                  <img
                    src={image}
                    alt="Project Thumbnail"
                    class="object-cover object-center w-full h-72 transition duration-500 md:h-40 md:object-top lg:h-44 md:scale-110 md:group-hover:scale-105"
                    loading="lazy"
                  />
                </div> }
                <div class="pointer-events-none z-10 flex flex-col gap-2 px-2 pt-3">
