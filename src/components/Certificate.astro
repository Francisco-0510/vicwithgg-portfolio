---
import certificates from '@collections/certificates.json';
---

{
  certificates.map(({ time, title, certificationName, img }) => {
    return (
      <ol class="mt-6 space-y-5">
        <li class="flex gap-4">
          <div class="relative flex h-10 w-10 flex-none items-center justify-center rounded-lg   shadow-sm shadow-zinc-600/50 ring-1 ring-zinc-900/5 dark:ring-0 card-breakpoint:hidden">
            <img
              alt=""
              class="w-12 rounded-full"
              data-nimg="1"
              decoding="async"
              loading="lazy"
              src={img}
              style="color: transparent;"
            />
          </div>
          <div class="flex flex-col gap-y-1  ">
            <span class="text-xs text-muted-foreground dark:text-neutral-300 trackign-widest">
              {time}
            </span>
            <div class="">
              <div class=" text-base font-semibold tracking-tight ">
                {title}
              </div>
            </div>
            {/* <dd class="w-full flex-none text-base font-medium text-zinc-900 dark:text-zinc-100">
              {title}
            </dd> */}
            <div class="z-10   text-pretty text-sm text-primary font-medium">
              <p>{certificationName}</p>
            </div>

            {/*  <span class="text-sm text-black dark:text-neutral-200 card-breakpoint:hidden">
              {certificationName}
            </span> */}
          </div>
        </li>
      </ol>
    );
  })
}
